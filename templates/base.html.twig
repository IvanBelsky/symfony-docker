<!DOCTYPE html>
<html>
{% import "macro/core.twig" as core %}
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <button id="showUsers" onclick="document.location='{{ path('show_users',{'page': 0}) }}'">AllUsers</button>
    <button onclick="document.location='{{ path('show_articles') }}'">Просмотр всех статей</button>

    {% if app.user %}
      <button onclick="document.location='{{ path('app_logout') }}'">Выйти</button>
    {% else %}
      <button onclick="document.location='{{ path('login') }}'">Войти</button>
      <button onclick="document.location='{{ path('show_form_add_new_user') }}'">Регистрация</button>
    {% endif %}

        {% block body %}
        {% endblock %}
       <h1>Hello? World!</h1>
    </body>
</html>
